{
  "parser": "typescript",
  "trailingComma": "es5",
  "printWidth": 120,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": false,
  "htmlWhitespaceSensitivity": "strict",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": false,
  "overrides": [
    {
      "files": "*.css",
      "options": {
        "parser": "css"
      }
    }
  ]
}
